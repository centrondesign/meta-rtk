From: yaozenhu <yaozenhu@realtek.com>
Date: Tue, 26 Aug 2025 03:39:44 -0400
Subject: [PATCH] dts: mipi only mode for gamepad on backinblack

---
 arch/arm64/boot/dts/realtek/rtd1619b-backinblack-2gb.dts | 7 ++++---
 1 file changed, 4 insertions(+), 3 deletions(-)

diff --git a/arch/arm64/boot/dts/realtek/rtd1619b-backinblack-2gb.dts b/arch/arm64/boot/dts/realtek/rtd1619b-backinblack-2gb.dts
index 0fcc5e3fa825..c1306a2cf003 100644
--- a/arch/arm64/boot/dts/realtek/rtd1619b-backinblack-2gb.dts
+++ b/arch/arm64/boot/dts/realtek/rtd1619b-backinblack-2gb.dts
@@ -34,18 +34,18 @@ ve2: ve2 {
 };
 
 &display_subsystem {
-	ports = <&voext_out>, <&vo_out>;
+	ports = <&voext_out>;
 	status = "okay";
 };
 
 &vo {
-	status = "okay";
+	status = "disabled";
 	compatible = "realtek,rtd-crtc-main";
 };
 
 &voext {
 	status = "okay";
-	compatible = "realtek,rtd-crtc-ext";
+	compatible = "realtek,rtd-crtc-ext-all";
 	voext_out: port {
 		voext_out_dsi: endpoint {
 			remote-endpoint = <&dsi_in_voext>;
@@ -97,6 +97,7 @@ panel_in_dsi: endpoint {
 
 &hdmi {
 	ext-flags = <0x0>;
+	status = "disabled";
 };
 
 &sound {
